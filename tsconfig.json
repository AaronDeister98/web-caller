{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": false,
        "allowJs": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        "spec"
    ],
    "ts-node": {
        "esm": true,
        "transpileOnly": false,
        "files": true,
        "experimentalResolver": true,
        "skipIgnore": true,
    }
}